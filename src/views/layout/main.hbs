<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />

    {{! Toastr CSS }}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/index.css" />

    <title>{{sectionPage}} - {{nameShopping}}</title>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="jumbotron text-left border bg-warning">
          <div class="d-flex justify-content-between align-items-center">
            <!-- Menu -->
            <div class="d-inline-flex align-items-center p-2">
              <div>
                <figure><img src="/images/logo.png" alt="Logo de una pipa" style="width: 50px" /></figure>
              </div>
              <div>
                <h3 class="">
                  <a href="/">{{nameShopping}} - {{sectionPage}}</a>
                </h3>
              </div>
            </div>

            <div class="d-flex mx-5 gap-4">

              {{#if user}}
                <!-- Profile -->
                <div class="dflex">
                  <h5><a href="/profile"><i class="fa-solid fa-user" style="color: #000000;"></i></a></h5>
                </div>

                {{#if isAdmin}}
                  <div class="dflex">
                    <h5><a href="/admin/users"><i class="fa-solid fa-screwdriver-wrench" style="color: #000000;"></i></a></h5>
                  </div>
                {{/if}}

                <!-- Cart -->
                {{#if isNotAdmin}}
                  <div class="d-flex align-items-center">
                    <h5 class="mx-2"><a href="/cart"><i class="fa-solid fa-cart-shopping" style="color: #000000;"></i></a></h5>
                  </div>
                {{/if}}

                <!-- Logout -->
                <div class="dflex">
                  <h5><a href="/logout" id="logoutButton"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #000000;"></i></a></h5>
                </div>
              {{else}}

                <!-- Register -->
                <div class="dflex">
                  <h5><a href="/register">Register</a></h5>
                </div>

                <!-- Login -->
                <div class="dflex">
                  <h5><a href="/login">Login</a></h5>
                </div>
              {{/if}}

            </div>
          </div>
        </div>
      </div>

      <!-- Body content -->
      {{{body}}}

    </div>
    {{! Main JS }}
    <script src="/js/main.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/af2dede480.js" crossorigin="anonymous"></script>
    {{! Toastr  }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
  </body>
</html>