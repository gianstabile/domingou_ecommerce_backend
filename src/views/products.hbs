<div class="row">
  <div class="container">
    <div class="welcome-message pt-3">
      <h5>{{messageUser}}</h5>
    </div>
    {{#if isAdminAndPremium}}
      {{! FORM PRODUCTS }}
      <div class="col-xl">
        <div class="row">
          <div class="container mx-auto my-2">
            <h2 class="bg-dark text-white p-2 text-center">ADD A PRODUCT</h2>
            <form id="productForm" enctype="multipart/form-data" method="post">
              <div class="form-group row mt-2">
                <div class="col">
                  <label class="form-label" for="title">Title*</label>
                  <input class="form-control" type="text" name="title" id="title" autofocus required />
                </div>
                <div class="col">
                  <label for="state">Status</label>
                  <select name="status" id="status" class="form-control">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                    autofocus required
                  </select>

                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col">
                  <label class="form-label" for="price">Price*</label>
                  <input class="form-control" type="text" name="price" id="price" autofocus required />
                </div>
                <div class="col">
                  <label class="form-label" for="code">Code*</label>
                  <input class="form-control" type="text" name="code" id="code" autofocus required />
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col">
                  <label class="form-label" for="stock">Stock*</label>
                  <input class="form-control" type="text" name="stock" id="stock" autofocus required />
                </div>
                <div class="col">
                  <label class="form-label" for="category">Category*</label>
                  <select class="form-select" name="category" id="category">
                    <option value="Tabacos rubios" selected>Tabacos rubios</option>
                    <option value="Tabacos negros">Tabacos negros</option>
                    <option value="Blends">Blends</option>
                    <option value="Packs">Packs</option>
                    <option value="Otros">Otros</option>
                  </select>
                </div>

              </div>
              <div class="form-group row mt-2">
                <div class="col">
                  <label class="form-label" for="description">Description*</label>
                  <textarea class="form-control" type="text" name="description" id="description" autofocus required></textarea>
                </div>
              </div>
              <div class="form-group row mt-2">
                <div class="col">
                  <label for="thumbnails">Thumbnails*</label>
                  <input type="file" name="thumbnails" multiple="true" class="form-control" id="thumbnails" enctype="multipart/form-data" accept=".jpg, .png, .gif, .webp" required />
                </div>
              </div>
              <div class="form-group row mt-3">
                <div class="col">
                  <input type="submit" value="+ product" class="btn btn-dark w-100 font-weight-bold" id="submitForm" />
                </div>
              </div>
              <div class="m-3" id="result"></div>
            </form>
          </div>
        </div>
      </div>
    {{/if}}
    {{! LIST PRODUCTS }}
    <div class="row">
      <div class="my-3">
        {{#if products}}
          <div class="row d-flex justify-content-center justify-content-xl-start">
            {{#each products}}
              <div class="card m-2 p-2" style="width: 15rem;">
                <a href="/product/{{this._id}}"><img class="card-img-top img-fluid" src="{{this.thumbnails}}" alt="{{this.title}}" /></a>
                <div class="card-body text-center">
                  <h5 class="card-title"><a href="/product/{{this._id}}">{{this.title}}</a></h5>
                  <p class="card-text product-description">{{this.description}}</p>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item list-group-item-action">
                      {{this.category}}
                    </li>
                    <li class="list-group-item list-group-item-action">
                      <strong>Code:</strong>
                      #{{this.code}}
                    </li>
                    <li class="list-group-item list-group-item-action">
                      <strong>Price:</strong>
                      ${{this.price}}
                    </li>
                    <li class="list-group-item list-group-item-action">
                      {{this.stock}}
                      unidades
                    </li>
                  </ul>
                  {{! buttons }}
                  <div>
                    <a href="/product/{{this._id}}" class="btn btn-success my-2">View</a>
                    {{#if @root/isAdmin}}
                      <a href="#" id="deleteButton" class="btn btn-danger my-2" data-id="{{this._id}}" onclick="handleDeleteButtonClick(event)">Delete</a>
                    {{/if}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
          <div class="d-flex justify-content-end gap-2 my-3">
            {{#if prevPage}}
              <a href="/products?page={{prevPage}}" class="btn btn-warning">Prev</a>
            {{/if}}
            {{#if nextPage}}
              <a href="/products?page={{nextPage}}" class="btn btn-warning">Next</a>
            {{/if}}
          </div>
        {{else}}
          <div class="row w-100 my-4">
            <p>No products found ü§∑‚Äç‚ôÇÔ∏è</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
<script src="/js/products.js"></script>